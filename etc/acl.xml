<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="ShoppingFeed_Manager::main" title="Shopping Feed" translate="title" sortOrder="100000">
                    <resource id="ShoppingFeed_Manager::main_marketing" title="Marketing" translate="title" sortOrder="10000">
                        <resource id="ShoppingFeed_Manager::account_stores" title="Stores" translate="title" sortOrder="10000">
                            <resource id="ShoppingFeed_Manager::account_store_create_unexisting" title="Create an Account" translate="title" sortOrder="10000"/>
                            <resource id="ShoppingFeed_Manager::account_store_create_existing" title="Import an Account" translate="title" sortOrder="20000"/>
                            <resource id="ShoppingFeed_Manager::account_store_edit" title="Edit Account" translate="title" sortOrder="30000"/>
                            <resource id="ShoppingFeed_Manager::account_store_delete" title="Delete Account" translate="title" sortOrder="40000"/>
                            <resource id="ShoppingFeed_Manager::account_token_update" title="Update Account Token" translate="title" sortOrder="50000"/>
                        </resource>

                        <resource id="ShoppingFeed_Manager::cron_tasks" title="Cron Tasks" translate="title" sortOrder="20000">
                            <resource id="ShoppingFeed_Manager::cron_task_run" title="Run Cron Task" translate="title" sortOrder="10000"/>
                            <resource id="ShoppingFeed_Manager::cron_task_edit" title="Edit Cron Task" translate="title" sortOrder="20000"/>
                            <resource id="ShoppingFeed_Manager::cron_task_delete" title="Delete Cron Task" translate="title" sortOrder="30000"/>
                        </resource>
                    </resource>

                    <resource id="ShoppingFeed_Manager::main_sales" title="Sales" translate="title" sortOrder="20000">
                        <resource id="ShoppingFeed_Manager::shipping_method_rules" title="Shipping Method Rules" translate="title" sortOrder="10000">
                            <resource id="ShoppingFeed_Manager::shipping_method_rule_edit" title="Edit Shipping Method Rule" translate="title" sortOrder="10000"/>
                            <resource id="ShoppingFeed_Manager::shipping_method_rule_delete" title="Delete Shipping Method Rule" translate="title" sortOrder="20000"/>
                        </resource>

                        <resource id="ShoppingFeed_Manager::marketplace_orders" title="Marketplace Orders" translate="title" sortOrder="20000">
                            <resource id="ShoppingFeed_Manager::marketplace_order_fetch" title="Fetch an Order" translate="title" sortOrder="10000"/>
                            <resource id="ShoppingFeed_Manager::marketplace_order_import" title="Import an Order" translate="title" sortOrder="20000"/>
                            <resource id="ShoppingFeed_Manager::marketplace_order_cancel_import" title="Cancel an Import" translate="title" sortOrder="30000"/>
                            <resource id="ShoppingFeed_Manager::marketplace_order_reset_import_try_count" title="Reset Import Attempts" translate="title" sortOrder="40000"/>
                        </resource>

                        <resource id="ShoppingFeed_Manager::marketplace_order_logs" title="Order Logs" translate="title" sortOrder="30000">
                            <resource id="ShoppingFeed_Manager::marketplace_order_log_mark_as_read" title="Mark as Read" translate="title" sortOrder="10000"/>
                        </resource>

                        <resource id="ShoppingFeed_Manager::marketplace_order_tickets" title="Order Sync Tickets" translate="title" sortOrder="40000"/>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
