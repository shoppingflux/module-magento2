<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="string">ShoppingFeed\Manager\Block\Adminhtml\Base\Edit\BackButton</item>
            <item name="reset" xsi:type="string">ShoppingFeed\Manager\Block\Adminhtml\Base\Edit\ResetButton</item>
            <item name="save" xsi:type="string">ShoppingFeed\Manager\Block\Adminhtml\Account\Edit\SaveButton</item>
        </item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">sfm_account_form_create_existing</item>
        </item>
        <item name="js_config" xsi:type="array">
            <item name="deps" xsi:type="string">sfm_account_form_create_existing.account_form_data_source</item>
            <item name="provider" xsi:type="string">sfm_account_form_create_existing.account_form_data_source</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <dataSource name="account_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">ShoppingFeed\Manager\Ui\EmptyDataProvider</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="*/*/create_existing"/>
                </item>
            </argument>
            <argument name="name" xsi:type="string">account_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">account_id</argument>
            <argument name="requestFieldName" xsi:type="string">account_id</argument>
        </argument>
    </dataSource>
    <fieldset name="account">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="dataScope" xsi:type="string">account</item>
                <item name="label" xsi:type="string" translate="true">Account</item>
            </item>
        </argument>
        <field name="use_api_token">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="default" xsi:type="number">1</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="label" xsi:type="string" translate="true">I Know the Account API Token</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="switcherConfig" xsi:type="array">
                        <item name="enabled" xsi:type="boolean">true</item>
                        <item name="rules" xsi:type="array">
                            <item name="0" xsi:type="array">
                                <item name="actions" xsi:type="array">
                                    <item name="0" xsi:type="array">
                                        <item name="callback" xsi:type="string">hide</item>
                                        <item name="target" xsi:type="string">${$.parentName}.api_token</item>
                                    </item>
                                    <item name="1" xsi:type="array">
                                        <item name="callback" xsi:type="string">show</item>
                                        <item name="target" xsi:type="string">${$.parentName}.shopping_feed_login</item>
                                    </item>
                                    <item name="2" xsi:type="array">
                                        <item name="callback" xsi:type="string">show</item>
                                        <item name="target" xsi:type="string">${$.parentName}.shopping_feed_password</item>
                                    </item>
                                </item>
                                <item name="value" xsi:type="number">0</item>
                            </item>
                            <item name="1" xsi:type="array">
                                <item name="actions" xsi:type="array">
                                    <item name="0" xsi:type="array">
                                        <item name="callback" xsi:type="string">show</item>
                                        <item name="target" xsi:type="string">${$.parentName}.api_token</item>
                                    </item>
                                    <item name="1" xsi:type="array">
                                        <item name="callback" xsi:type="string">hide</item>
                                        <item name="target" xsi:type="string">${$.parentName}.shopping_feed_login</item>
                                    </item>
                                    <item name="2" xsi:type="array">
                                        <item name="callback" xsi:type="string">hide</item>
                                        <item name="target" xsi:type="string">${$.parentName}.shopping_feed_password</item>
                                    </item>
                                </item>
                                <item name="value" xsi:type="number">1</item>
                            </item>
                        </item>
                    </item>
                    <item name="valueMap" xsi:type="array">
                        <item name="false" xsi:type="number">0</item>
                        <item name="true" xsi:type="number">1</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="api_token">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="label" xsi:type="string" translate="true">API Token</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="shopping_feed_login">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="label" xsi:type="string" translate="true">Shopping Feed Account Name</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="shopping_feed_password">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">password</item>
                    <item name="elementTmpl" xsi:type="string">ShoppingFeed_Manager/form/element/password</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="label" xsi:type="string" translate="true">Shopping Feed Password</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
    </fieldset>
    <fieldset name="store">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="dataScope" xsi:type="string">store</item>
                <item name="label" xsi:type="string" translate="true">Store</item>
            </item>
        </argument>
        <field name="import_main_store">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="number">1</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="label" xsi:type="string" translate="true">Import the Account Main Store</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="switcherConfig" xsi:type="array">
                        <item name="enabled" xsi:type="boolean">true</item>
                        <item name="rules" xsi:type="array">
                            <item name="0" xsi:type="array">
                                <item name="actions" xsi:type="array">
                                    <item name="0" xsi:type="array">
                                        <item name="callback" xsi:type="string">hide</item>
                                        <item name="target" xsi:type="string">${$.parentName}.base_store_id</item>
                                    </item>
                                </item>
                                <item name="value" xsi:type="number">0</item>
                            </item>
                            <item name="1" xsi:type="array">
                                <item name="actions" xsi:type="array">
                                    <item name="0" xsi:type="array">
                                        <item name="callback" xsi:type="string">show</item>
                                        <item name="target" xsi:type="string">${$.parentName}.base_store_id</item>
                                    </item>
                                </item>
                                <item name="value" xsi:type="number">1</item>
                            </item>
                        </item>
                    </item>
                    <item name="valueMap" xsi:type="array">
                        <item name="false" xsi:type="number">0</item>
                        <item name="true" xsi:type="number">1</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="base_store_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">int</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Associated Store View</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
                <item name="options" xsi:type="object">Magento\Store\Ui\Component\Listing\Column\Store\Options</item>
            </argument>
        </field>
    </fieldset>
</form>
